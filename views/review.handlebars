<div class="container">
	<div class="page-header row">
		<div class="col-4 mx-auto">
			<img class="logo-img m-0" style="height: 180px; width: 250px;" src="/styles/images/Hamjars-Inc-Logo.png" alt="logo">
		</div>
	</div>
	<div class="row">
		<h6 class="font-italic">1955 E 6th St, Tucson, AZ 85721 P: 520.555.5554 F: 520.555.5555 www.HamjarsInc.com</h6>
	</div>
	<!--		info_1-->
	<hr />
	<div class="row info_1">
		<div class="col">
			<div class="row title mb-4"><h3>Work Order</h3></div>
			<div class="row">
				<div class="col">
					<h6>Order #: 018430</h6>
					<h6>Order By: {{orders.clientName}}</h6>
					<h6>Customer ID: {{orders.id}}</h6>
					<h6>Order Date: {{user.createdAt}}</h6>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="row">
				<div class="col"><h6>Workorder ID: {{orders.id}}</h6></div>
				<div class="col">
					<h6>Date: {{user.createdAt}}</h6>
					<h6>W/O #: {{orders.id}}</h6>
					<H6>Revision #: </H6>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<h6>Install Date: {{orders.installationDate}} Time: Any</h6>
					<h6>Installer Name: {{orders.installerName}} </h6>
				</div>
			</div>
		</div>
	</div>
	<!--		end of info_1-->
	<!--		info_2-->
	<hr />
	<div class="row info_2 my-4">
		<!--			sold to-->
		<div class="col">
			<div class="row square">
				<div class="col m-2">
					<h4 class="head">SOLD TO</h4>
					<h6>Name: {{orders.clientName}}</h6>
					<H6>Address: {{orders.clientAddress}}</H6>
					<h6>City/State: TUCSON, AZ</h6>
					<h6>Country: US</h6>
					
					<h6>Phone: {{phoneFormatter orders.clientPhone}}</h6>
				</div>
			</div>
			<div class="row">
				<div class="col m-2">
					<H6>Job Status: {{orders.isComplete}}</H6>
				</div>
			</div>
		</div>
		<!--			end of sold to-->
		<!--			Job Location-->
		<div class="col offset-1">
			<div class="row square">
				<div class="col m-2">
					<h4 class="head">JOB LOCATION</h4>
					<h6>Code: 0000 Contact</h6>
					<H6>Address: {{orders.jobAddress}}</H6>
					<h6>City/State: TUCSON, AZ</h6>
					<h6>Country: US</h6>
					<h6>Phone: {{phoneFormatter orders.clientPhone}}</h6>
				</div>
			</div>
			<div class="row">
				<div class="col m-2">
					
					<h6>Special Instructions: {{orders.comments}}</h6>
					
				</div>
			</div>
		</div>
		<!--			end of Jab Location-->
	</div>
		
	<div class="row table">
		<div class="col">
			<div class="row">
				<div class="col">
					<h5>*APPROVE ANY EXTRA FLOOR PREP</h5>
					<h5>*REMOVE ALL OLD LAYERS OF VINYL</h5>
					<h5>*planks entry, kitchen, hall, laundry, and bath</h5>
					<h5>*carpet/pad in bedroom, living room, den</h5>
				</div>
			</div>
			<div class="row mt-2">
				<div class="col">
					<table class="table table-striped">
						<thead>
						<tr>
							<th scope="col">Line</th>
							<th scope="col">Prod Code</th>
							<th scope="col">Style</th>
							<th scope="col">Total Qty (sq.ft)</th>
						</tr>
						</thead>
						<tbody>
						<tr>
							<th scope="row">1</th>
							<td>Aged Bulgarian Teak </td>
							<td>Dark</td>
							<td>300</td>
						</tr>
						<tr>
							<th scope="row">2</th>
							<td>Natural Bamboo Plank</td>
							<td>Wide</td>
							<td>350</td>
						</tr>
						<tr>
							<th scope="row">3</th>
							<td>Catalina Grey Tile</td>
							<td>Brushed</td>
							<td>350</td>
						</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<!--		end of table-->
	<hr />
	<div class="row">
		<div class="col-1 ml-auto">
			<button class="btn btn-primary m-2 mr-auto" onclick="myFunction()">PRINT</button>
		</div>
	</div>

</div>

<style>
	.square{
		border: 2px solid black;
		height: 250px;
	}

	.head{
		border-bottom: 2px solid black;
		background-color: #c4c4c4;
	}
</style>

<script>
	function myFunction() {
		window.print();
	}
</script>
