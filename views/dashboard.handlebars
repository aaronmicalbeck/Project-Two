				{{/if}}

				<td><a href="#"><i class="fas fa-map-marked-alt"></i></a></td>
			</tr>
			<!--                    end of single row-->
			<!--                    single row-->
			<tr>
				<td><button class="badge badge-pill badge-primary">Review</button></td>
				<th scope="row">Jack</th>
				<td>(343)78923</td>
				<td>12/78/2019</td>
				<td>Green</td>
				<td><span class="badge badge-pill badge-danger">Canceled</span></td>
				<td>Jack</td>
				<td><button class="badge badge-pill badge-info" data-toggle="modal" data-target="#readModal">Read</button></td>
				{{#if user.isAdmin}}
					<td><button type="button" class="badge badge-pill badge-success edit" data-toggle="modal" data-target="#exampleModal">Edit</button></td>
				{{/if}}
			</tr>
			<tr id="address" class="">
				<th></th>
				<th>Client Address:</th>
				<td colspan="2">789N 9th, AZ</td>
				<th>Job Address:</th>
				{{#if user.isAdmin}}
					<td colspan="3">237S 5th, AZ</td>
				{{else}}
					<td colspan="2">237S 5th, AZ</td>
				{{/if}}
				<td><a href="#"><i class="fas fa-map-marked-alt"></i></a></td>
			</tr>
			<!--                    end of single row-->
			<!--			single row-->
		{{#each orders}}
			<tr>
				<td><button class="badge badge-pill badge-primary">Review</button></td>
				<th scope="row">{{clientName}}</th>
				<td>{{clientPhone}}</td>
				<td>{{installationDate}}</td>
				<td>{{materials}}</td>
				<td><span class="badge badge-pill {{checkStatus isComplete}}" id="status">{{isComplete}}</span></td>
				<td>{{installerName}}</td>
				<td><button class="badge badge-pill badge-info" data-toggle="modal" data-target="#readModal">Read</button></td>
				{{#if ../user.isAdmin}}
					<td><button type="button" class="badge badge-pill badge-success edit" data-toggle="modal" data-target="#exampleModal" id={{id}}>Edit</button></td>
				{{/if}}

			</tr>
<!--			address-->
			<tr id="address" class="">
				<th></th>
				<th>Client Address:</th>
				<td colspan="2">{{clientAddress}}</td>
				<th>Job Address:</th>
				<td colspan="3">{{jobAddress}}</td>
				<td><a href="#"><i class="fas fa-map-marked-alt"></i></a></td>
			</tr>
<!--			end of address-->

				<!--read modal-->
				<div class="modal fade" id="readModal" tabindex="-1" role="dialog" aria-labelledby="readModalLabel"
					aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="readModalLabel">Order note: </h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<p>{{comments}}</p>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							</div>
						</div>
					</div>
				</div>
				<!--end of read modal-->
				{{else}}
				<!--			<P>No  jobs available</P>-->
				{{/each}}
				<!--			end of single row-->
			</tbody>
		</table>
	</div>
</div>

