<div class="container">
	<div class="row">
		<div class="col-1 ml-auto">
			<!-- Add Button trigger modal -->
			<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#exampleModal">
				Add
			</button>
			<!-- Modal -->
			<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<form method="post" action="/api/workorder">
								<div class="form-group">
									<input class="form-control" name="clientName" id="clientName" aria-describedby="clientName">
									<label for="clientName" class="font-weight-bold">ClientName</label>
								</div>
								<div class="form-group">
									<input class="form-control" name="clientAddress" id="clientAddress" aria-describedby="clientAddress" placeholder="Enter address">
									<label for="clientAddress" class="font-weight-bold">Client Address</label>
								</div>
								<div class="form-group">
									<input class="form-control" name="clientPhone" id="clientPhone" placeholder="Phone number">
									<label for="clientPhone" class="font-weight-bold">Client Phone</label>
								</div>
								<div class="form-group">
									<input class="form-control" name="installationDate" id="installDate" placeholder="mm/dd/yyyy">
									<label for="installDate" class="font-weight-bold">Installation Date</label>
								</div>
								<div class="form-group">
									<input class="form-control" name="jobAddress" id="jobAddress">
									<label for="jobAddress" class="font-weight-bold">Job Address</label>
								</div>
								<div class="form-group">
									<input class="form-control" name="materials" id="materials">
									<label for="materials" class="font-weight-bold">Materials</label>
								</div>
								<div class="form-group">
									<input class="form-control" name="comments" id="comments" placeholder="Any quick note...">
									<label for="comments" class="font-weight-bold">Note</label>
								</div>
								<div class="form-group">
									<label for="Installer">Installer</label>
									<select class="form-control" id="Installer" name="installerName">
										<option>Jackson</option>
										<option>Peter</option>
										<option>Danny</option>
										<option>David</option>
									</select>
								</div>

								<!--                                        process-->
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
									<label class="form-check-label" for="inlineRadio1"><span class="badge badge-pill badge-success">Completed</span></label>
								</div>
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
									<label class="form-check-label" for="inlineRadio2"><span class="badge badge-pill badge-warning">Pending</span></label>
								</div>
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
									<label class="form-check-label" for="inlineRadio3"><span class="badge badge-pill badge-danger">Canceled</span></label>
								</div>
								<!--                                        end of process-->
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
									<input type="submit" class="btn btn-primary" value="Submit">
								</div>
							</form>
						</div>

					</div>
				</div>
			</div>
			<!--                    end of modal-->
		</div>
	</div>
	<div class="row mt-4">
		<table class="table table-striped">
			<thead>
			<tr>
				<th class="th-sm">Client Name</th>
				<th class="th-sm">Client Address</th>
				<th class="th-sm">Client Phone</th>
				<th class="th-sm">Installation Date</th>
				<th class="th-sm">Job Address</th>
				<th class="th-sm">Materials</th>
				<th class="th-sm">Status</th>
				<th class="th-sm">Installer Name</th>
				<th class="th-sm">Note</th>
				<th class="th-sm">Edit</th>
			</tr>
			</thead>
			<tbody>
			<!--                    single row-->
			<tr>
				<th scope="row">Mike</th>
				<td>550N 7th</td>
				<td>(343)78923</td>
				<td>12/78/2019</td>
				<td>340E 3th</td>
				<td>Green</td>
				<td><span class="badge badge-pill badge-warning">Pending</span></td>
				<td>Jack</td>
				<td><button class="badge badge-pill badge-info" data-toggle="modal" data-target="#readModal">Read</button></td>
				<td><button class="badge badge-pill badge-success">Edit</button></td>
			</tr>
			<!--                    end of single row-->
			<!--                    single row-->
			<tr>
				<th scope="row">Jack</th>
				<td>550N 7th</td>
				<td>(343)78923</td>
				<td>12/78/2019</td>
				<td>340E 3th</td>
				<td>Green</td>
				<td><span class="badge badge-pill badge-danger">danger</span></td>
				<td>Jack</td>
				<td><button class="badge badge-pill badge-info" data-toggle="modal" data-target="#readModal">Read</button></td>
				<td><button class="badge badge-pill badge-success">Edit</button></td>
			</tr>
			<!--                    end of single row-->
			<!--			single row-->
			<tr>
				<th scope="row">{{clientName}}</th>
				<td>{{clientAddress}}</td>
				<td>{{clientPhone}}</td>
				<td>{{installationDate}}</td>
				<td>{{jobAddress}}</td>
				<td>{{materials}}</td>
				<td><span class="badge badge-pill badge-danger">{{isComplete}}</span></td>
				<td>{{installerName}}</td>
				<td><button class="badge badge-pill badge-info" data-toggle="modal" data-target="#readModal">Read</button></td>
				<td><button class="badge badge-pill badge-success">Edit</button></td>
			</tr>

			<!--read modal-->
			<div class="modal fade" id="readModal" tabindex="-1" role="dialog" aria-labelledby="readModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="readModalLabel">Order note: </h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<p>{{comments}}</p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
			<!--end of read modal-->
			<!--			end of single row-->
			</tbody>
		</table>
	</div>

</div>


